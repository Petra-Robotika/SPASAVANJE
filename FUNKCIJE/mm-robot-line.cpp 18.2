
void RobotLine::wallFollowRight() {
     armOpen();
    if (rightFront() > 120)
       go(90, 10);
     else
      go(10, 90);

  }

void RobotLine::wallFollowLeft(){
     armOpen();
    if (leftFront() > 120)
     go(10, 90);
   else
    go(90, 10);
}
