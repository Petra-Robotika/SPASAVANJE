#pragma once
 #include "helper.h"

void RobotLine::radionica()
{
  static int broj = 0;
  char simbol[10 + sizeof(char)];
pracenjeLinije();
  if (line(1) && line(7) && (broj==0 or broj==1)) {
    go(-90, 90);
    delayMs(500);
    broj++;
  }

  if (line(6) && line(8) && broj==2) {
    go(50, 50);
    delayMs(1000);
    broj++;
  }

  if (line(1) && line(7) && broj>2) {
    go(-90, 90);
    delayMs(1000);
    broj++;
  }

  if (line(0) && line(2) && broj==4) {
    go(90, -90);
    delayMs(500);
    broj++;
  }
 sprintf(simbol, "%d", broj);
 display(simbol);
}
